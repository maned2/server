[Unit]
Description=Swatchdog Eco service
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
ExecStart=swatchdog -c '/var/server/services/swatchdog/eco-chat.conf' -t "/home/eco/server/Logs/Chat/Channel/General/*.log" --tail-prog=/usr/bin/multitail --tail-args="-Q 1"
Restart=always
RestartSec=1
EnvironmentFile=/etc/environment

[Install]
WantedBy=multi-user.target